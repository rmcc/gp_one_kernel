config SCSI_MVSAS
	tristate "Marvell 88SE64XX SAS/SATA support"
	depends on PCI
	select SCSI_SAS_LIBSAS
	select FW_LOADER
	help
		This driver supports Marvell's SAS/SATA 3Gb/s PCI-E 88SE64XX
		chip based host adapters.

